        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
    if (isLoading || newValue === '') {
        return;
    }

    g_form.clearMessages();

    var state = g_form.getValue('state');

    if (state == '100') {
        var link = '<a href="x_1397355_s_speed_test_result.do?sys_id=' + g_form.getValue('last_test_result') + '">HERE</a>';
        g_form.addInfoMessage('The test is complete, check the results ' + link);
    } else if (state == '300') {
        g_form.addErrorMessage('The test failed. Please check the scripts.');
    }
}]]></script>
